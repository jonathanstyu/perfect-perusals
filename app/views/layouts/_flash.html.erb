<% if flash[:success] %>
	<div class="alert alert-success">
		<button type='button' class='close' data-dismiss='alert'>x</button>	
		<%= flash[:success]%>
	</div>
<%end%>


<% if flash[:error] %>
	<div class="alert alert-error">
		<button type='button' class='close' data-dismiss='alert'>x</button>	
		<%= flash[:error] %>
	</div>
<%end%>