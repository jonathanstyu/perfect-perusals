<% if current_user %>
	<% if user == current_user %>
	<a href="#" class='btn btn-small btn-success'>You're Already Your Own Best Friend!</a>
	<%else%>
	<%= button_to "Friend", user_friend_path(user), :class => 'btn btn-small btn-success' %>
	<%end%>
<%else%>
	<%= link_to "Log In To Friend", login_path, :class => 'btn btn-small btn-primary' %>
<%end%>
