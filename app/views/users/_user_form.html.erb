<%= form_for user do |form| %>

	<label for="Name">Name</label>
	<input type="text" name="user[name]" value="<%= user.name %>" id="Name">
	
	<label for="Email Address">Email Address</label>
	<input type="text" name="user[email]" value="<%= user.email %>" id="Email Address">
	
	<label for="Password">Password</label>
	<input type="password" name="user[password]" value="" id="Password">
	
	<label for="Confirm Password">Confirm Password</label>
	<input type="password" name="passconfirm" value="" id="Confirm Password">
	
	<label for='user[biography]'>Tell us a little bit about yourself?</label>
	<textarea name="user[biography]" rows="3" cols="100"></textarea>
	
	<label>Upload a Profile Picture</label>	
	<%= form.file_field :profile_pic %><br>

	<label for="Terms">By checking this box you are agreeing to our <a href="#">terms of service</a>.</label>
	<input type="checkbox" name="Terms" value="" id="Terms">
	<hr />
		
	<input type="submit" name="submit" 
		value="<%= path == users_path ? 'Sign Up' : 'Log In' %> " 
		id="submit" class='btn btn-primary'>
		
<%end%>