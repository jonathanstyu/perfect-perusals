<div class="row">
	<div class="span3">
		<img src="<%= @book.cover_image %>">
	</div>
	<div class="span9">
		<h3><%= @book.title.capitalize %></h3>
		<p>
			By: <% @book.authors.each_with_index do |author, index| %>
				<a href="<%= user_path(author) %>">
					<%= author.name %>
				</a>
				
				<% unless index == @book.authors.size - 1 %>
				<%= ', '%>
				<%end%>
				
			<%end%>
		</p>
			Synopsis: <%= @book.synopsis %>
		</p>
	</div>	
</div>


<div class="span10" id="review_form">
	<hr />
	<h4>Your Review</h4>
	<% review = @book.reviews.where(reviewer_id: @current_user.id) %>
	<% if review.empty? %>
	<h5>Review this book!</h5>
	<%= render partial: "reviews/review_form", 
		locals: {book: @book, 
			method: "post", 
			path: book_reviews_path(@book)}%>
	<%end%>
</div><!-- .span10 -->

<div class="span10" id='reviews'>
	<h4>Reviews</h4>
	<hr />
	<%= render @book.reviews %>
</div><!-- .span10 -->
