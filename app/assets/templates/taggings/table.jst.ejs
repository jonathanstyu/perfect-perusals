<table border="2" cellspacing="5" cellpadding="5" class='table'>
	<tr>
		<th>Cover</th>
		<th>Title</th>
		<th>Author</th>
		<th>Avg Rating</th>
		<th>Your Rating</th>
		<th>Date Read</th>
		<th>Date Added</th>
		<th>Shelf</th>
	</tr>
	
	<% taggings.forEach(function (tagging) { %>
		<tr>
			<td><img src="<%= tagging.get('book').cover %>" style='width: 60px'></td>
			<td><a href="/books/<%= tagging.escape('book_id') %>"><%= tagging.get('book').title%></a></td>
			<td><%= tagging.get('book').author_names.join(", ") %></td>
			<td><%= tagging.get('book').avg_rating.toFixed(2) %></td>
			<td id="myrating" data-id='<%= tagging.escape("book_id") %>'>
				<a href="/books/<%= tagging.escape('book_id') %>">
					Rate
				</a>
			</td>
			<td><%= tagging.escape('updated_at') %></td>
			<td><%= tagging.escape('created_at') %></td>
			<td id="shelf"><%= tagging.escape('name') %></td>
		</tr>		
	<% }); %>
</table>
